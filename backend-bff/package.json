{
  "name": "backend-bff",
  "version": "1.0.0",
  "description": "Backend For Frontend (BFF) para aplicação educacional de posts com autenticação JWT e MongoDB.",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles --runInBand",
    "test:watch": "NODE_ENV=test jest --watch"
  },
  "keywords": [
    "express",
    "typescript",
    "bff",
    "mongodb",
    "jwt",
    "authentication"
  ],
  "author": "Herik Ribeiro",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.4.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "jws": ">= 4.0.0",        
    "body-parser": ">= 2.2.1" ,
    "glob": ">= 11.1.0"
  },
  "types": "./dist/server.d.ts"
}
